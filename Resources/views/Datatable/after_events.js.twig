{# save individual filters value into stateSave #}
{% if view_options.individualFiltering and view_features.stateSave %}
.on('stateSaveParams.dt', function (e, oSettings, sValue) {
    var container = $.fn.dataTable.Api(oSettings)
        .table()
        .header();

    $(container).find("tr .individual_filtering").each(function() {
        var element = $(this);
        sValue[element.attr('id')] = {
            value: element.val()
        };
    });

    return sValue;
})
{% endif %}
