{% extends 'SgDatatablesBundle:Filters:filter.html.twig' %}

{% block html %}
    {% if column.filter.searchTypes|length > 1 %}
        <select id="{{ tableId }}-sg-search-type-{{ selectorId }}" class="">
            {% for searchType in column.filter.searchTypes %}
                <option value="{{ searchType }}">{{ searchType }}</option>
            {% endfor %}
        </select>
    {% endif %}

    <input type="text"
           id="{{ tableId }}-sg-filter-{{ selectorId }}"
           class="individual_filtering {{ column.filter.class|default(defaultFilterClass) }}"
           style="{% if column.width %} width:{{ column.width }};{% endif %}"
           placeholder="{{ column.filter.placeholder|striptags|trim }}"
           data-filter-property-id="{{ filterColumnId }}"
           data-search-column="{{ column.filter.searchColumn }}"
           {% if column.name %}name="{{ column.name }}"{% endif %}
           {% if column.filter.searchColumn %}value="{{ column.filter.searchColumn }}"{% endif %} />
    {% if true == column.filter.cancelButton %}
        {{ cancel_button_html }}
    {% endif %}
{% endblock %}
